---
import "@fontsource/roboto-slab/variable.css";
import "@fontsource/rubik/variable.css";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta name="theme-color" content="#ffffff" />

        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <meta name="og:title" content="Mathias Jørgensen" />
        <meta name="og:description" content="CSA & Software Engineer" />
        <meta name="og:image" content="https://www.jorqensen.dev/favicon.ico" />
        <meta name="og:url" content="https://www.jorqensen.dev" />
        <meta name="og:type" content="profile" />
        <meta name="og:profile:first_name" content="Mathias" />
        <meta name="og:profile:last_name" content="Jørgensen" />
        <meta name="og:profile:username" content="jorqensen" />
        <meta name="og:profile:gender" content="male" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@jorqensen" />

        <title>Mathias Jørgensen</title>
    </head>
    <body class="bg-sun-tornado bg-zinc-950 font-rubik text-zinc-500 antialiased">
        <main class="grid h-screen place-items-center">
            <slot />
        </main>
    </body>
</html>
