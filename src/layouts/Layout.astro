---
import "@fontsource-variable/inter";
import "@fontsource-variable/lora";
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

import Navigation from "@/components/Navigation.astro";
import Footer from "@/components/Footer.astro";

const layout = tv({
    base: "grid container max-w-4xl",
    variants: {
        spacing: {
            2: "space-y-2",
            4: "space-y-4",
            6: "space-y-6",
            8: "space-y-8",
            10: "space-y-10",
        },
    },
});

interface Props extends VariantProps<typeof layout>, HTMLAttributes<"main"> {
    title?: string;
    navigation?: boolean;
    heading: string;
    prefix?: string;
    leading?: string;
}

const { class: className, title, navigation, heading, prefix, leading, spacing } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <link rel="icon" type="image/png" href="/favicon.webp" />
        <link rel="manifest" href="/mmanifest.json" />

        <meta name="og:title" content="Mathias Jørgensen" />
        <meta name="og:description" content="CSA & Software Engineer" />
        <meta name="og:image" content="https://www.jorqensen.dev/favicon.ico" />
        <meta name="og:url" content="https://www.jorqensen.dev" />
        <meta name="og:type" content="profile" />
        <meta name="og:profile:first_name" content="Mathias" />
        <meta name="og:profile:last_name" content="Jørgensen" />
        <meta name="og:profile:username" content="jorqensen" />
        <meta name="og:profile:gender" content="male" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@jorqensen" />

        <title>Mathias Jørgensen {title && "- " + title}</title>
    </head>
    <body class="bg-zinc-200 py-6 font-inter text-zinc-800 antialiased selection:bg-app-500 selection:text-app-700">
        <main class={layout({ spacing, className })}>
            <!-- Navigation -->
            {navigation && <Navigation />}

            <!-- Header -->
            <header class="py-28 text-center">
                {prefix && <p class="text-xs font-medium uppercase tracking-widest text-zinc-600">{prefix}</p>}
                <h1 class="font-lora text-5xl font-semibold capitalize">{heading}</h1>
                {leading && <p class="mt-3 text-xs font-medium uppercase tracking-widest text-zinc-600">{leading}</p>}
            </header>

            <!-- Main Content -->
            <slot />

            <!-- Footer -->
            <Footer />
        </main>
    </body>
</html>
