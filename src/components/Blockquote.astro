---
import { Icon } from "astro-icon";
import { tv } from "tailwind-variants";

const styles = tv({
    slots: {
        quote: "relative text-sm",
        cite: "block mt-2 text-zinc-400 text-xs font-medium",
        icon: "w-24 h-24 absolute text-zinc-300 right-0 -top-8 -z-10",
    },
});

const { quote: quoteStyles, icon: iconStyles, cite: citeStyles } = styles();

interface Props {
    cite?: string;
}

const { cite } = Astro.props;
---

<blockquote class={quoteStyles()}>
    <Icon name="entypo:quote" class={iconStyles()} />
    <slot />
    {cite && <cite class={citeStyles()}>- {cite}</cite>}
</blockquote>
