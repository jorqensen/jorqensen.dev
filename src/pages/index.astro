---
import { Image } from "astro:assets";
import CenteredLayout from "@/layouts/CenteredLayout.astro";
import jorqensen from "@/assets/jorqensen.jpg";
import Link from "@/components/Link.astro";
import SocialIcon from "@/components/SocialIcon.astro";
import about from "@/about";
import GradientBox from "@/components/GradientBox.astro";
---

<CenteredLayout>
    <GradientBox rounded={"md"} border={"medium"} class="container grid max-w-4xl grid-cols-4 gap-4">
        <!-- "Sidebar" w/ image -->
        <aside class="col-span-4 md:col-span-1">
            <Image src={jorqensen.src} width={300} height={300} alt="profile" class="min-h-full w-1/3 rounded-md object-cover md:w-full" />
        </aside>
        <!-- Text content -->
        <section class="col-span-4 md:col-span-3">
            <header class="mb-4">
                <p class="text-sm font-medium text-zinc-600">Hi, I'm</p>
                <h1 class="mb-1 font-roboto-slab text-4xl font-semibold">Mathias JÃ¸rgensen</h1>
                <p class="mb-4 text-sm font-medium text-zinc-600">
                    A 26 year old developer located in the cold north of <Link href={about.location}>Odense, Denmark</Link>.
                </p>
                <nav class="relative flex space-x-3">
                    <SocialIcon href={about.socials.twitter} icon="tabler:brand-twitter" />
                    <SocialIcon href={about.socials.linkedin} icon="tabler:brand-linkedin" />
                    <SocialIcon href={about.socials.buymeacoffee} icon="tabler:coffee" />
                    <SocialIcon href={about.socials.github} icon="tabler:brand-github" />
                    <SocialIcon href={about.socials.spotifyPlaylist} icon="tabler:brand-spotify" />
                    <SocialIcon href={about.socials.email} icon="tabler:mail" />
                </nav>
            </header>
            <article class="grid grid-cols-1 space-y-4 leading-loose">
                <p>
                    I currently work as a CSA at <Link href="https://ordbogen.com/en">Ordbogen A/S</Link>. In my spare time, I like to help
                    fellow developers on the Laravel PHP Discord server, dabble with Rust, C# & Go. If I'm not being productive, I'm
                    probably trying to achieve 100% in various games.
                </p>
                <p>
                    If you're interested in hiring me for mid/high scale project, my current answer is a no. However, for code review &
                    guaranteed help/support I can be persuaded.
                </p>
                <p>
                    If you want to get in touch with me, the easiest way is via. <Link href={about.socials.email}>e-mail</Link> or social media.
                </p>
            </article>
        </section>
    </GradientBox>
</CenteredLayout>
